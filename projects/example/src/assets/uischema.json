{
  "type": "VerticalLayout",
  "elements": [
    {
      "type": "Control",
      "scope": "#/properties/title"
    },
    {
      "type": "Control",
      "scope": "#/properties/description",
      "options": {
        "multi": true
      }
    },
    {
      "type": "HorizontalLayout",
        "elements": [
          {
            "type": "Control",
            "scope": "#/properties/price"
          },
          {
            "type": "Control",
            "scope": "#/properties/ordered",
            "options": {
              "toggle": true
            }
          }
        ]
    },
    {
      "type": "Control",
      "scope": "#/properties/amount",
      "options": {
        "slider": true
      }
    }
  ]
}

